<web-app>

  <display-name>Error Hospital System (EHS) | Aerosimo Ltd</display-name>

  <!-- Listener configuration for SOAP Service -->
  <listener>
    <listener-class>
      com.sun.xml.ws.transport.http.servlet.WSServletContextListener
    </listener-class>
  </listener>

  <!-- SOAP Service Configuration -->
  <servlet>
    <servlet-name>soap</servlet-name>
    <servlet-class>
      com.sun.xml.ws.transport.http.servlet.WSServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- Servlet mapping configuration for SOAP Service -->
  <servlet-mapping>
    <servlet-name>soap</servlet-name>
    <url-pattern>/ws/*</url-pattern>
  </servlet-mapping>

  <!-- REST Service Configuration -->
  <servlet>
    <servlet-name>rest</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>com.aerosimo.ominet.service</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- Servlet mapping configuration for REST Service -->
  <servlet-mapping>
    <servlet-name>rest</servlet-name>
    <url-pattern>/rs/*</url-pattern>
  </servlet-mapping>

  <!-- Logging configuration -->
  <context-param>
    <param-name>log4jConfiguration</param-name>
    <param-value>log4j2.xml</param-value>
  </context-param>
  <!-- Specifying the welcome page -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>